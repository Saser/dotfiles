[colors]
background = ${xrdb:background:#222}
background-alt = ${xrdb:fadeColor:#333}
foreground = ${xrdb:foreground:#444}
underline = ${xrdb:color4:#f44}

red = ${xrdb:color1}
green = ${xrdb:color2}
blue = ${xrdb:color4}
yellow = ${xrdb:color3}

[bar/top]
monitor = ${env:MONITOR:eDP-1}
width = 100%
height = 36
font-0 = Source\ Code\ Pro:pixelsize=16;0

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3

border-bottom-size = 2
border-color = ${colors.background-alt}

padding = 1
module-margin = 1

modules-right = phones network battery date

wm-restack = bspwm

[module/phones]
type = custom/script
exec = $HOME/.config/polybar/scripts/bluetooth-status
interval = 2
format-underline = ${colors.underline}
click-left = $HOME/.config/polybar/scripts/bluetooth-toggle

[module/network]
type = internal/network
interface = wlp3s0

label-connected = %essid%
format-connected = network: <label-connected>
format-connected-underline = ${colors.green}

label-disconnected = disconnected
format-disconnected = network: <label-disconnected>
format-disconnected-underline = ${colors.red}

[module/battery]
type = internal/battery

battery = BAT0
adapter = ADP1
full-at = 99

poll-interval = 1

format-charging = battery: <label-charging>
label-charging = %percentage% % (C)
format-charging-underline = ${colors.yellow}

format-discharging = battery: <label-discharging>
label-discharging = %percentage% % (D)
format-discharging-underline = ${colors.red}

format-full = battery: <label-full>
label-full = %percentage% % (F)
format-full-underline = ${colors.green}

[module/date]
type = internal/date
interval = 1

date = %Y-%m-%d
time = %H:%M

date-alt = ${module/date.date}
time-alt = %H:%M:%S

label = %date% | %time%

format-underline = ${colors.underline}

; vim:filetype=dosini
