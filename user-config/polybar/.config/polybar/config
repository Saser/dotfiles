[colors]
background = ${xrdb:background:#222}
background-alt = ${xrdb:fadeColor:#333}
foreground = ${xrdb:foreground:#444}
underline = ${xrdb:color4:#f44}

[bar/top]
width = 100%
height = 36
font-0 = Source\ Code\ Pro:pixelsize=16;0

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3

border-bottom-size = 2
border-color = ${colors.background-alt}

padding = 1
module-margin = 1

modules-right = network bluetooth-phones battery date

wm-restack = bspwm

[module/date]
type = internal/date
interval = 1

date = %Y-%m-%d
time = %H:%M

date-alt = ${module/date.date}
time-alt = %H:%M:%S

label = %date% | %time%

format-underline = ${colors.underline}

[module/battery]
type = internal/battery

battery = BAT0
adapter = ADP1
full-at = 99

poll-interval = 1

format-charging = <label-charging>
label-charging = C: %percentage% %

format-discharging = <label-discharging>
label-discharging = D: %percentage% %

format-full = <label-full>
label-full = F: %percentage% %

format-charging-underline = ${xrdb:color3:#ff0}
format-discharging-underline = ${xrdb:color1:#ff0}
format-full-underline = ${xrdb:color2:#0f0}

[module/bluetooth-phones]
type = custom/script
exec = $HOME/.config/polybar/scripts/bluetooth-status
interval = 2
format-underline = ${colors.underline}
click-left = $HOME/.config/polybar/scripts/bluetooth-toggle

[module/network]
type = internal/network
interface = wlp3s0

label-connected = %essid%
format-connected = network: <label-connected>
format-connected-underline = ${xrdb:color2:#0f0}

label-disconnected = disconnected
format-disconnected = network: <label-disconnected>
format-disconnected-underline = ${xrdb:color3:#f00}

; vim:filetype=dosini
