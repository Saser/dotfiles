#!/usr/bin/zsh

NEW_PATH="$PATH"

# Make my scripts available.
NEW_PATH="${NEW_PATH}:${HOME}/scripts"
# Also make temporary scripts, that I do not include in my dotfiles, available
# in the PATH.
NEW_PATH="${NEW_PATH}:${HOME}/scripts/tmp"
# SEMI-TEMPORARY: include non-system packages installed with `stow` to the
# `~/build` directory.
NEW_PATH="${NEW_PATH}:${HOME}/build/bin"
# Make binaries installed with `pip` available.
NEW_PATH="${NEW_PATH}:${HOME}/.local/bin"

export PATH="$NEW_PATH"
